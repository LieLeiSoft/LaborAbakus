<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/analysenwaage"
    tools:context=".EinwaageActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnWeiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:minEms="6"
            android:onClick="btnWeiter"
            android:text="@string/Weiter"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:minEms="6"
            android:onClick="btnClear"
            android:text="@string/Clear"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cEingabe"
            android:gravity="center"
            android:minEms="50"
            android:text="@string/Beschriftung_Einwage"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cBlau"
            android:textColorHint="@color/cBlau" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:gravity="center_horizontal" >

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cHellorange"
                android:gravity="center_horizontal"
                android:text="@string/Leermasse"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/cSchwarz" />

            <TextView
                android:id="@+id/TextView_Einmassart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/cHellorange"
                android:gravity="center_horizontal"
                android:text="@string/Einwaage"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/cSchwarz" />

        </TableRow>

        <TableRow
            android:id="@+id/EW0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/Tara_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Tara_1"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_0"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold" />

            <EditText
                android:id="@+id/Einwaage_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Einwaage_1"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Tara_1"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold" />

        </TableRow>

        <TableRow
            android:id="@+id/EW1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/Tara_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Tara_2"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_1"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/Einwaage_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Einwaage_2"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Tara_2"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:id="@+id/EW2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/Tara_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Tara_3"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_2"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/Einwaage_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Einwaage_3"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Tara_3"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:id="@+id/EW3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/Tara_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Tara_4"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_3"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/Einwaage_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Einwaage_4"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Tara_4"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:id="@+id/EW4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/Tara_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Tara_5"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_4"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/Einwaage_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Einwaage_5"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Tara_5"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

        </TableRow>
        
        <TableRow
            android:id="@+id/EW5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/Tara_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Tara_6"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/Einwaage_5"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/Einwaage_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/Einwaage_6"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/btnWeiter"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:textColor="@color/cGold"
                android:textColorHint="@color/cGold"
                android:visibility="invisible" />

        </TableRow>
    </TableLayout>

</TableLayout>