<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellorange">

        <TextView
            android:id="@+id/tvAcidBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_span="3"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/trMasseKonz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellorange">

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Masse"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAnpassungMasseKonz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:textColor="@color/cSchwarz"
            android:background="@color/cHellgrau"
            android:textCursorDrawable="@color/cSchwarz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="g"
            android:textColor="@color/cSchwarz"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ist gesucht"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellorange">

        <Button
            android:id="@+id/tvBerechnungKonz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnBerechneMasseKonz"
            android:text="Berechne"
            android:textAllCaps="false"
            android:textSize="16sp" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <Button
            android:id="@+id/tvBerechnungKonz5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="btnBerechneKonz"
            android:text="Berechne"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="VerdÃ¼nnung:"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

    </TableRow>

    <TableRow
        android:id="@+id/trMasseVerd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <TextView
            android:id="@+id/textView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Masse"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAnpassungMasseVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:background="@color/cHellgrau"
            android:textColor="@color/cSchwarz"
            android:textCursorDrawable="@color/cSchwarz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="g"
            android:textColor="@color/cSchwarz"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ist gesucht"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:id="@+id/trGehaltVerd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <TextView
            android:id="@+id/textView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Gehalt"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAnpassungGehaltVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:background="@color/cHellgrau"
            android:textColor="@color/cSchwarz"
            android:textCursorDrawable="@color/cSchwarz"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tvAnpassungEinheitGehaltVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="btnEinheitGehaltVerd"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ist gesucht"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellblau">

        <TextView
            android:id="@+id/tvErgebnis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_span="3"
            android:stretchColumns="0"
            android:textColor="@color/cSchwarz" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellblau">

        <TextView
            android:id="@+id/tvErgebnis2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cSchwarz" />

    </TableRow>

</TableLayout>
