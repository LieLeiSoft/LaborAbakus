            android:gravity="center_horizontal"
            android:text="ist gesucht"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />


    </TableRow>

    <TableRow
        android:id="@+id/trMasseVerd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <TextView
            android:id="@+id/tvNameVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Masse"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAnpassungMasseVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cHellgrau"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:textColor="@color/cSchwarz"
            android:textCursorDrawable="@color/cSchwarz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEinheitVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="g"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tvAnpassungEinheitVerdMenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="btnEinheitVerdMenge"
            android:text="g"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ist gesucht"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:id="@+id/trDichteVerd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Dichte"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDichteVerd"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="unbekannt"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="g/ml"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <TextView
            android:id="@+id/tvErgebnis1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_span="3"
            android:stretchColumns="0"
            android:textColor="@color/cSchwarz" />

    </TableRow>

</TableLayout>
