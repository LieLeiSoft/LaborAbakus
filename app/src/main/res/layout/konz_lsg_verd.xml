<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/messkolben_hintergrund_klein"
    android:stretchColumns="*"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellorange">

        <TextView
            android:id="@+id/tvAcidBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:gravity="center_horizontal"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/trMasseKonz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellorange">

        <TextView
            android:id="@+id/tvNameKonz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Volumen"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAnpassungMasseKonz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cHellgrau"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:textColor="@color/cSchwarz"
            android:textCursorDrawable="@color/cSchwarz"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tvAnpassungEinheitKonz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="btnEinheitKonz"
            android:text="ml"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ist gesucht"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:id="@+id/trBerechneKonz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellorange">

        <Button
            android:id="@+id/tvBerechnungKonz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnBerechneMasseKonz"
            android:text="Berechne"
            android:textAllCaps="false"
            android:textSize="16sp" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <Button
            android:id="@+id/tvBerechnungKonz5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="btnBerechneKonz"
            android:text="Berechne"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="VerdÃ¼nnung:"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

    </TableRow>

    <TableRow
        android:id="@+id/trGehaltVerd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cHellgruen">

        <TextView
            android:id="@+id/textView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Gehalt"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAnpassungGehaltVerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cHellgrau"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:textColor="@color/cSchwarz"
            android:textCursorDrawable="@color/cSchwarz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGehaltVerd"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEinheitVerdGehalt"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="%"
            android:textColor="@color/cSchwarz"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tvAnpassungEinheitVerdGehalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="btnEinheitVerdGehalt"
            android:text="mol/l"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
