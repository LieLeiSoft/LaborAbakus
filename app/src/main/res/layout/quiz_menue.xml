<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".QuizMenueActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cHellorange"
            android:gravity="center_horizontal"
            android:text="PSE - Quiz"
            android:textColor="@color/cSchwarz"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:textSize="30sp" />

        <TextView
            android:id="@+id/tvHighscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cHellorange"
            android:gravity="center_horizontal"
            android:text="Highscore:"
            android:textColor="@color/cSchwarz"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:textSize="18sp" />

        <Button
            android:id="@+id/btnLevel_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cHellblau"
            android:onClick="btnLevel_1"
            android:textAllCaps="false"
            android:textColor="@color/cSchwarz"
            android:textColorHighlight="@color/cSchwarz" />

        <Button
            android:id="@+id/btnLevel_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cOrange"
            android:onClick="btnLevel_2"
            android:textAllCaps="false"
            android:textColor="@color/cSchwarz"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLevel_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cHellbraun"
            android:onClick="btnLevel_3"
            android:textAllCaps="false"
            android:textColor="@color/cSchwarz"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLevel_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cLeichtblau"
            android:onClick="btnLevel_4"
            android:textAllCaps="false"
            android:textColor="@color/cSchwarz"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLevel_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cHellgruen"
            android:onClick="btnLevel_5"
            android:textAllCaps="false"
            android:textColor="@color/cSchwarz"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLevel_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/chellrot"
            android:onClick="btnLevel_6"
            android:textAllCaps="false"
            android:textColor="@color/cSchwarz"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>
